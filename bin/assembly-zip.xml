<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>package</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <files>
    <file>
      <source>${project.build.directory}/test-crew-framework-light-1.0.0-executable.jar</source>
      <outputDirectory>/lib</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/src/test/resources/Run_Manager.xlsx</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/src/test/resources/config.properties</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/bin/run-test.bat</source>
      <outputDirectory>/</outputDirectory>
    </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/notes</directory>
      <outputDirectory>notes</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/drivers</directory>
      <outputDirectory>drivers</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>